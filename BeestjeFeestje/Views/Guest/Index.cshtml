@model List<MyDomain.Guest.IGuestVM>
@{
    ViewData["Title"] = "Guest Overview";
}

<div class="container my-4">
    <div class="text-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Guest")'">Create Guest</button>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    for (var i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].Name</td>
                            <td>
                                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a>
                                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@Model[i].Id">Details</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@Model[i].Id">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No guests found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
