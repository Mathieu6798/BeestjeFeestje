@model MyDomain.Booking
@{
    ViewData["Title"] = "Delete Booking";
}

<div class="container my-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white text-center">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body text-center">
            <p class="lead">Are you sure you want to delete this booking?</p>
            <p>
                <strong>Booked Date:</strong> @Model.BookedDate.ToShortDateString() <br />
                <strong>Guest Name:</strong> @Model.ContactInformation.Name <br />
                <strong>Email:</strong> @Model.ContactInformation.Email <br />
                <strong>Phone Number:</strong> @Model.ContactInformation.PhoneNumber
            </p>
        </div>
        <div class="card-footer text-center">
            <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
            </form>
            <a class="btn btn-secondary" href="@Url.Action("BookingsList", "Booking")">No, Cancel</a>
        </div>
    </div>
</div>
