@model MyDomain.Animal
@{
    ViewData["Title"] = "Details of Animal";
}

<div class="container my-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Type:</strong> @Model.Type</p>
            <p><strong>Price:</strong> $@Model.Price</p>
            <p><strong>Image URL:</strong> <a href="@Model.Image" target="_blank">@Model.Image</a></p>
        </div>
        <div class="card-footer text-center">
            <button class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Animal")'">Back to List</button>
        </div>
    </div>
</div>
